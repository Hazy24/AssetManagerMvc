@model AssetManagerMvc.Models.Asset

<div class="form-group">
    @Html.LabelFor(model => model.ModelName, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10" style="float: left;">
        @Html.DropDownList("ModelName", null, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.ModelName, "", new { @class = "text-danger" })
        <a id="modelNameLink" href="javascript:" onclick="changeToText('ModelName', 'modelNameLink'); return false;">New model name?</a>
    </div>
</div>