@model AssetManagerMvc.Models.Computer

<div class="form-group">
    @Html.LabelFor(model => model.AntiVirus, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10" style="float: left;">
        @Html.DropDownList("AntiVirus", null, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.AntiVirus, "", new { @class = "text-danger" })
        <a id="typeLink" href="javascript:" onclick="changeToText('AntiVirus', 'typeLink'); return false;">New?</a>
    </div>
</div>