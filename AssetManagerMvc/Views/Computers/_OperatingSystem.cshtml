@model AssetManagerMvc.Models.Computer

<div class="form-group">
    @Html.LabelFor(model => model.OperatingSystem, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10" style="float: left;">
        @Html.DropDownList("OperatingSystem", null, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.OperatingSystem, "", new { @class = "text-danger" })
        <a id="typeLink" href="javascript:" onclick="changeToText('OperatingSystem', 'typeLink'); return false;">New operating system?</a>
    </div>
</div>
