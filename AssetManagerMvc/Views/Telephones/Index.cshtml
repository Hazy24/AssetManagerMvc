@model IEnumerable<AssetManagerMvc.Models.Telephone>

@{
    ViewBag.Title = "Telephones";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm("Index", "Telephones", FormMethod.Get))
{
    <p>
        Filter: @Html.TextBox("SearchString")
        <input type="submit" value="Filter" />
    </p>
}
<table class="table alternating">
    <tr>
        <th>
            @Html.ActionLink("CompoundId", "Index", new { sortOrder = ViewBag.CompoundIdSortParm, searchString = ViewBag.CurrentFilter })
        </th>
        <th>
            @Html.ActionLink("Number", "Index", new { sortOrder = ViewBag.NumberSortParm, searchString = ViewBag.CurrentFilter })
        </th>
        <th>
            @Html.ActionLink("Intern", "Index", new { sortOrder = ViewBag.InternSortParm, searchString = ViewBag.CurrentFilter })
        </th>    
        <th>
            @Html.ActionLink("Type", "Index", new { sortOrder = ViewBag.TelephoneTypeSortParm, searchString = ViewBag.CurrentFilter })
        </th>
        <th>
            @Html.ActionLink("Manufacturer", "Index", new { sortOrder = ViewBag.ManufacturerSortParm, searchString = ViewBag.CurrentFilter })
        </th>
        <th>
            @Html.ActionLink("Model Name", "Index", new { sortOrder = ViewBag.ModelNameSortParm, searchString = ViewBag.CurrentFilter })
        </th>      
         
        <th><div style="min-width: 140px;"></div></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.CompoundId, "Index", "UsePeriods", new { assetId = item.AssetId, current = false, hideUitGebruik = false }, null)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Number)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberIntern)
        </td>    
        <td>
            @Html.DisplayFor(modelItem => item.TelephoneType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Manufacturer)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModelName)
        </td>      
          
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.AssetId }) |
            @Html.ActionLink("Details", "Details", new { id=item.AssetId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.AssetId })
        </td>
    </tr>
}

</table>
